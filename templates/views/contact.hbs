<!DOCTYPE html>
<html lang="en">
  <head>
    {{>headerlink}}
  </head>
  <body>
    {{>navbar}}
     <section id="contact">
      <h1 class="h-primarycenter">Contact Us</h1>
      <div id="contact-box">
        <form action="/contact" method="POST">
          <div class="formgroup">
            <label for="name">Name</label>
            <input
              type="form"
              name="name"
              id="name"
              placeholder="Enter your Name"
            />
          </div>
          <div class="formgroup">
            <label for="email">Email</label>
            <input
              type="form"
              name="email"
              id="email"
              placeholder="Enter your Email"
            />
          </div>
          <div class="formgroup">
            <label for="phone">Mobile No</label>
            <input
              type="form"
              name="phone"
              id="phone"
              placeholder="Enter your Mobile No"
            />
          </div>
          <div class="formgroup">
            <label for="Message">Message</label>
            <textarea
              name="message"
              id="message"
              cols="30"
              rows="10"
            ></textarea>
          </div>
          <button class="btn1" type="submit">Submit</button>
        </form>
      </div>
    </section>
    <footer>
      {{>footer}}
    </footer>
  </body>
</html>